{
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/user/index",
      "style": {
        "navigationBarTitleText": "用户资料",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/user/edit",
      "style": {
        "navigationBarTitleText": "编辑资料",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/asset/index",
      "style": {
        "navigationBarTitleText": "资产展示",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/wallet/connect",
      "style": {
        "navigationBarTitleText": "连接钱包",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/post/index",
      "style": {
        "navigationBarTitleText": "社区广场",
        "enablePullDownRefresh": true
      }
